<%= render 'shared/content_title', title: 'Edit Profile' %>

<div class="well">
  <%= form_for @user do |f| %>
    <%= render 'shared/form_errors', obj: @user %>
    <div class="control-group">
      <%= f.label 'New Email' %>
      <%= f.text_field :email %>
    </div>
    <div class="control-group">
      <%= f.label 'New Password' %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit 'Update', class: 'btn btn-success' %>
  <% end %>
</div>