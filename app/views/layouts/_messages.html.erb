<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) || msg.is_a?(Symbol) %>
    <div class="row">
      <div class="alert alert-<%= name.to_s == "notice" ? "success" : "danger" %> col-md-6">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name.to_s}" %>
      </div>
    </div>
  <% end %>
<% end %>